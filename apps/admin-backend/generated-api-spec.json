          {
            "schema": { "type": "string", "enum": ["en", "fr", "es", "ge"] },
            "in": "path",
            "name": "languageCode",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Default Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "message": { "type": "string" } },
                  "required": ["message"],
                  "additionalProperties": false
                }
              }
            }
          }
        }
      }
    },
