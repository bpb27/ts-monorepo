{
  "name": "@repo/auth-service",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "codegen": "pnpm db:introspect && tsx --env-file=.env scripts/codegen.ts",
    "dev": "tsx watch --env-file=.env src/server.ts",
    "test": "vitest run",
    "lint": "biome check",
