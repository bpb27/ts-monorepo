    "better-auth": "^1.3.2",
    "fastify": "^5.4.0",
    "fastify-type-provider-zod": "^5.0.2",
    "kysely": "^0.28.3",
    "pg": "^8.16.3",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.1",
    "@types/node": "^24.0.14",
    "@types/pg": "^8.15.4",
    "kysely-codegen": "^0.18.5",
    "kysely-ctl": "^0.14.0",
    "tsx": "^4.20.3",
