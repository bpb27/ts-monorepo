    "migrate:latest": "kysely migrate:latest && pnpm codegen",
    "migrate:down": "kysely migrate:down && pnpm codegen",
    "migrate:make": "kysely migrate:make"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.5.1",
